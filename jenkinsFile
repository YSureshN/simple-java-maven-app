
pipeline {
    agent none
    stages {
        stage('Run Tests') {
            parallel {
                stage('Test On Windows') {
                    agent {
                        label "label-1"
                    }
                    steps {
                        sh "echo windows"
                    }
                   }
                stage('Test On Linux') {
                    agent {
                        label "label-2"
                    }
                    steps {
                        sh "echo linux"
                    }
                 }
            }
        }
    }
}
