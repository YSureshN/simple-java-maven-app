
pipeline {
    agent any
    tools {
        maven 'maven-3.6.1' 
    }
    stages {
    stage('Build') {
            steps {
                echo 'Build Sucess'
            }
        }
        stage('Run Tests') {
            parallel {
                stage('Test On Windows') {
                    agent {
                        label "label-1"
                    }
                    steps {
                        sh "echo windows"
                    }
                   }
                stage('Test On Linux') {
                    agent {
                        label "label-2"
                    }
                    steps {
                        sh "echo linux"
                    }
                 }
            }
        }
    }
}
